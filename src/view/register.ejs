<div id="form">
    <p>Sign up</p>
    <hr/>
    <form action="/login" method="post">
      <div class="form-group">
        <label for="form_username">Mail</label>
        <input id="form_username" type="text" name="username" required/>
      </div>
      <div class="form-group">
        <label for="form_password">Password</label>
        <input id="form_password" type="password" name="password" required />
      </div>
      <button class="btn btn-primary btn-block" type="submit" value="Submit">Register</button>
    </form>
    <hr/>
    
  </div>

  <a href="/login">Login</a>